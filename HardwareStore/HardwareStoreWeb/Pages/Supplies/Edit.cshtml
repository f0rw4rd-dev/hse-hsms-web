@page
@model HardwareStoreWeb.Pages.Supplies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Supply</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Supply.Id" />
            <div class="form-group">
                <label asp-for="Supply.SupplyPrice" class="control-label"></label>
                <input asp-for="Supply.SupplyPrice" class="form-control" />
                <span asp-validation-for="Supply.SupplyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supply.Amount" class="control-label"></label>
                <input asp-for="Supply.Amount" class="form-control" />
                <span asp-validation-for="Supply.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supply.Date" class="control-label"></label>
                <input asp-for="Supply.Date" class="form-control" />
                <span asp-validation-for="Supply.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supply.SupplierId" class="control-label"></label>
                <select asp-for="Supply.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                <span asp-validation-for="Supply.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supply.ComponentId" class="control-label"></label>
                <select asp-for="Supply.ComponentId" class="form-control" asp-items="ViewBag.ComponentId"></select>
                <span asp-validation-for="Supply.ComponentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supply.WarehouseId" class="control-label"></label>
                <select asp-for="Supply.WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId"></select>
                <span asp-validation-for="Supply.WarehouseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
