@using HardwareStoreWeb.Models;
@model HardwareStoreWeb.Pages.Configurations.CreateModel

@{
    ViewData["Title"] = "Добавить комплектующее в конфигурацию";

    var userGroupId = int.Parse(ViewContext.HttpContext.User.FindFirst("GroupId")?.Value!);
	var permissions = Permission.permissions[(Group)userGroupId];

	if (!permissions.Configurations.CanCreate)
	{
		Response.Redirect("/Index");
	}
}

<div class="row mb-3">
    <div class="col d-flex d-sm-flex d-md-flex align-items-center align-items-sm-center align-items-md-center justify-content-xl-start col-auto">
        <h3 class="text-dark mb-0">Конфигурации</h3>
    </div>
</div>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-dark m-0 fw-bold">Добавить комплектующее в конфигурацию</p>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Configuration.ConfigurationId" class="control-label"></label>
                <input asp-for="Configuration.ConfigurationId" class="form-control" />
                <span asp-validation-for="Configuration.ConfigurationId" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Configuration.Amount" class="control-label"></label>
                <input asp-for="Configuration.Amount" class="form-control" />
                <span asp-validation-for="Configuration.Amount" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Configuration.ComponentId" class="control-label"></label>
                <input asp-for="Configuration.ComponentId" class="form-control" />
                <span asp-validation-for="Configuration.ComponentId" class="text-danger"></span>
            </div>
            <div class="col d-lg-flex d-xl-flex d-xxl-flex justify-content-lg-start justify-content-xl-start justify-content-xxl-start me-0 my-2">
                <div>
                    <button type="submit" class="btn btn-dark btn-sm me-2 my-1">
                        <i class="fas fa-plus fa-sm text-white-50"></i>&nbsp; Добавить
                    </button>
                    <a class="btn btn-dark btn-sm me-2 my-1" role="button" asp-page="./Index">
                        <i class="fas fa-arrow-left fa-sm text-white-50"></i>&nbsp; Вернуться
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

