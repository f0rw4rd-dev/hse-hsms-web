@model HardwareStoreWeb.Pages.OrderComponents.DetailsModel

@{
    ViewData["Title"] = "Содержимое заказа";
}

<div class="row mb-3">
    <div class="col d-flex d-sm-flex d-md-flex align-items-center align-items-sm-center align-items-md-center justify-content-xl-start col-auto">
        <h3 class="text-dark mb-0">Содержимое заказов</h3>
    </div>
</div>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-dark m-0 fw-bold">Информация о содержимом заказа [@Html.DisplayFor(model => model.OrderComponent.Id)]</p>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderComponent.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderComponent.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderComponent.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderComponent.Amount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderComponent.IsPartOfConfiguration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderComponent.IsPartOfConfiguration)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderComponent.OrderId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderComponent.OrderId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderComponent.Warehouse)
            </dt>
            <dd class="col-sm-10">
                [@Html.DisplayFor(model => model.OrderComponent.WarehouseId)] @Html.DisplayFor(model => model.OrderComponent.Warehouse!.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderComponent.Component)
            </dt>
            <dd class="col-sm-10">
                [@Html.DisplayFor(model => model.OrderComponent.ComponentId)] @Html.DisplayFor(model => model.OrderComponent.Component!.Name)
            </dd>
        </dl>
        <div class="col d-lg-flex d-xl-flex d-xxl-flex justify-content-lg-start justify-content-xl-start justify-content-xxl-start me-0">
            <div>
                <a class="btn btn-dark btn-sm me-2 my-1" role="button" asp-page="./Edit" asp-route-id="@Model.OrderComponent.Id">
                    <i class="fas fa-pencil-alt fa-sm text-white-50"></i>&nbsp; Изменить
                </a>
                <a class="btn btn-dark btn-sm me-2 my-1" role="button" asp-page="./Index">
                    <i class="fas fa-arrow-left fa-sm text-white-50"></i>&nbsp; Вернуться
                </a>
            </div>
        </div>
    </div>
</div>

