@using HardwareStoreWeb.Models;
@model HardwareStoreWeb.Pages.Warehouses.EditModel

@{
    ViewData["Title"] = "Редактировать склад";

    var userGroupId = int.Parse(ViewContext.HttpContext.User.FindFirst("GroupId")?.Value!);
    var permissions = Permission.permissions[(Group)userGroupId];

    if (!permissions.Warehouses.CanEdit)
    {
        Response.Redirect("/Index");
    }
}

<div class="row mb-3">
    <div class="col d-flex d-sm-flex d-md-flex align-items-center align-items-sm-center align-items-md-center justify-content-xl-start col-auto">
        <h3 class="text-dark mb-0">Склады</h3>
    </div>
</div>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-dark m-0 fw-bold">Изменить склад [@Html.DisplayFor(model => model.Warehouse.Id)]</p>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Warehouse.Id" />
            <div class="form-group my-2">
                <label asp-for="Warehouse.City" class="control-label"></label>
                <input asp-for="Warehouse.City" class="form-control" />
                <span asp-validation-for="Warehouse.City" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Warehouse.Street" class="control-label"></label>
                <input asp-for="Warehouse.Street" class="form-control" />
                <span asp-validation-for="Warehouse.Street" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Warehouse.House" class="control-label"></label>
                <input asp-for="Warehouse.House" class="form-control" />
                <span asp-validation-for="Warehouse.House" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Warehouse.Zip" class="control-label"></label>
                <input asp-for="Warehouse.Zip" class="form-control" />
                <span asp-validation-for="Warehouse.Zip" class="text-danger"></span>
            </div>
            <div class="col d-lg-flex d-xl-flex d-xxl-flex justify-content-lg-start justify-content-xl-start justify-content-xxl-start me-0 my-2">
                <div>
                    <button type="submit" class="btn btn-dark btn-sm me-2 my-1">
                        <i class="fas fa-pencil-alt fa-sm text-white-50"></i>&nbsp; Изменить
                    </button>
                    <a class="btn btn-dark btn-sm me-2 my-1" role="button" asp-page="./Index">
                        <i class="fas fa-arrow-left fa-sm text-white-50"></i>&nbsp; Вернуться
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

