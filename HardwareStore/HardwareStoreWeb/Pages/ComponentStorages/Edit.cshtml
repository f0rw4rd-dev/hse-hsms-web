@using HardwareStoreWeb.Models;
@model HardwareStoreWeb.Pages.ComponentStorages.EditModel

@{
    ViewData["Title"] = "Редактировать учет комплектующего";

    var userGroupId = int.Parse(ViewContext.HttpContext.User.FindFirst("GroupId")?.Value!);
	var permissions = Permission.permissions[(Group)userGroupId];

	if (!permissions.ComponentStorages.CanEdit)
	{
		Response.Redirect("/Index");
	}
}

<div class="row mb-3">
    <div class="col d-flex d-sm-flex d-md-flex align-items-center align-items-sm-center align-items-md-center justify-content-xl-start col-auto">
        <h3 class="text-dark mb-0">Учет комплектующих</h3>
    </div>
</div>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-dark m-0 fw-bold">Изменить информацию о комплектующем [@Html.DisplayFor(model => model.ComponentStorage.ComponentId)] на складе [@Html.DisplayFor(model => model.ComponentStorage.WarehouseId)] по цене @Html.DisplayFor(model => model.ComponentStorage.Price) руб.</p>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ComponentStorage.Id" />
            <div class="form-group my-2">
                <label asp-for="ComponentStorage.Price" class="control-label"></label>
                <input asp-for="ComponentStorage.Price" class="form-control" />
                <span asp-validation-for="ComponentStorage.Price" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="ComponentStorage.Amount" class="control-label"></label>
                <input asp-for="ComponentStorage.Amount" class="form-control" />
                <span asp-validation-for="ComponentStorage.Amount" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="ComponentStorage.WarehouseId" class="control-label"></label>
                <input asp-for="ComponentStorage.WarehouseId" class="form-control" />
                <span asp-validation-for="ComponentStorage.WarehouseId" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="ComponentStorage.ComponentId" class="control-label"></label>
                <input asp-for="ComponentStorage.ComponentId" class="form-control" />
                <span asp-validation-for="ComponentStorage.ComponentId" class="text-danger"></span>
            </div>
            <div class="col d-lg-flex d-xl-flex d-xxl-flex justify-content-lg-start justify-content-xl-start justify-content-xxl-start me-0 my-2">
                <div>
                    <button type="submit" class="btn btn-dark btn-sm me-2 my-1">
                        <i class="fas fa-pencil-alt fa-sm text-white-50"></i>&nbsp; Изменить
                    </button>
                    <a class="btn btn-dark btn-sm me-2 my-1" role="button" asp-page="./Index">
                        <i class="fas fa-arrow-left fa-sm text-white-50"></i>&nbsp; Вернуться
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

