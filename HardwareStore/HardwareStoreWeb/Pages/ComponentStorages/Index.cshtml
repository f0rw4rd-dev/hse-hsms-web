@page
@model HardwareStoreWeb.Pages.ComponentStorages.IndexModel

@{
    ViewData["Title"] = "Учет комплектующих";
}

<div class="row mb-3">
	<div class="col d-flex d-sm-flex d-md-flex align-items-center align-items-sm-center align-items-md-center justify-content-xl-start col-auto">
		<h3 class="text-dark mb-0">Учет комплектующих</h3>
	</div>
	<div class="col d-lg-flex d-xl-flex d-xxl-flex justify-content-lg-end justify-content-xl-end justify-content-xxl-end me-0">
		<div>
			<a class="btn btn-dark btn-sm me-2 my-1" role="button" href="ComponentStorages/Create">
				<i class="fas fa-plus fa-sm text-white-50"></i>&nbsp; Добавить
			</a>
			<a class="btn btn-dark btn-sm me-2 my-1" role="button" href="#">
				<i class="fas fa-filter fa-sm text-white-50"></i>&nbsp; Фильтр
			</a>
			<a class="btn btn-dark btn-sm ml-2 my-1" role="button" href="#">
				<i class="fas fa-file-export fa-sm text-white-50"></i>&nbsp; Экспорт
			</a>
		</div>
	</div>
</div>
<div class="card shadow">
	<div class="card-header py-3">
		<p class="text-dark m-0 fw-bold">Информация об учете комплектующих</p>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-6 text-nowrap">
				<div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
					<label class="form-label">
						Выбрать&nbsp;&nbsp;
						<select class="d-inline-block form-select form-select-sm">
							<option value="10" selected="">10</option>
							<option value="25">25</option>
							<option value="50">50</option>
							<option value="100">100</option>
						</select>&nbsp;
					</label>
				</div>
			</div>
			<div class="col-md-6">
				<div class="text-md-end dataTables_filter" id="dataTable_filter"><label class="form-label"><input type="search" class="form-control form-control-sm" aria-controls="dataTable" placeholder="Поиск..."></label></div>
			</div>
		</div>
		<div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
			<table class="table my-0" id="dataTable">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.ComponentStorage[0].Price)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ComponentStorage[0].Amount)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ComponentStorage[0].Warehouse)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ComponentStorage[0].Component)
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.ComponentStorage)
					{
						<tr class="align-middle">
							<td>
								@Html.DisplayFor(modelItem => item.Price)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Amount)
							</td>
							<td>
								[@Html.DisplayFor(modelItem => item.WarehouseId)] @Html.DisplayFor(modelItem => item.Warehouse!.Address)
							</td>
							<td>
								[@Html.DisplayFor(modelItem => item.ComponentId)] @Html.DisplayFor(modelItem => item.Component!.Name)
							</td>
							<td>
								<a class="btn btn-dark btn-sm me-2 my-1" role="button" asp-page="./Edit" asp-route-id="@item.Id">
									<i class="fas fa-pencil-alt fa-sm text-white-50"></i>&nbsp; Изменить
								</a>
								<a class="btn btn-dark btn-sm me-2 my-1" role="button" asp-page="./Details" asp-route-id="@item.Id">
									<i class="fas fa-info fa-sm text-white-50"></i>&nbsp; Просмотреть
								</a>
								<a class="btn btn-dark btn-sm me-2 my-1" role="button" asp-page="./Delete" asp-route-id="@item.Id">
									<i class="fas fa-trash-alt fa-sm text-white-50"></i>&nbsp; Удалить
								</a>
							</td>
						</tr>
					}
				</tbody>
				<tfoot>
					<tr>
						<td>
							<strong>@Html.DisplayNameFor(model => model.ComponentStorage[0].Price)</strong>
						</td>
						<td>
							<strong>@Html.DisplayNameFor(model => model.ComponentStorage[0].Amount)</strong>
						</td>
						<td>
							<strong>@Html.DisplayNameFor(model => model.ComponentStorage[0].Warehouse)</strong>
						</td>
						<td>
							<strong>@Html.DisplayNameFor(model => model.ComponentStorage[0].Component)</strong>
						</td>
						<td></td>
					</tr>
				</tfoot>
			</table>
		</div>
		<div class="row">
			<div class="col-md-6 align-self-center">
				<p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">Показано от 1 до 10 из 27</p>
			</div>
			<div class="col-md-6">
				<nav class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
					<ul class="pagination">
						<li class="page-item disabled"><a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
						<li class="page-item"><a class="page-link" href="#">1</a></li>
						<li class="page-item"><a class="page-link" href="#">2</a></li>
						<li class="page-item"><a class="page-link" href="#">3</a></li>
						<li class="page-item"><a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>